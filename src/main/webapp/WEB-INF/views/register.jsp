    <script>
    document.addEventListener('DOMContentLoaded', function() {
        const form = document.getElementById('registerForm');
        const emailInput = document.getElementById('email');
        const passwordInput = document.getElementById('password');
        const passwordConfirmInput = document.getElementById('passwordConfirm');
        const nameInput = document.getElementById('name');
        const phoneInput = document.getElementById('phone');
        const submitBtn = document.getElementById('submitBtn');
        const loading = document.getElementById('loading');
        
        let emailCheckTimer = null;
        
        // ===== Ïù¥Î©îÏùº Ïã§ÏãúÍ∞Ñ Ï§ëÎ≥µÏ≤¥ÌÅ¨ =====
        emailInput.addEventListener('input', function() {
            const email = this.value.trim();
            
            // Í∏∞Ï°¥ ÌÉÄÏù¥Î®∏ ÌÅ¥Î¶¨Ïñ¥
            if (emailCheckTimer) {
                clearTimeout(emailCheckTimer);
            }
            
            // Ïù¥Î©îÏùºÏù¥ ÎπÑÏñ¥ÏûàÏúºÎ©¥ Î©îÏãúÏßÄ Ïà®Í∏∞Í∏∞
            if (!email) {
                hideError('emailError');
                hideSuccess('emailSuccess');
                return;
            }
            
            // Í∏∞Î≥∏Ï†ÅÏù∏ Ïù¥Î©îÏùº ÌòïÏãùÎßå Ï≤¥ÌÅ¨ (@ Ìè¨Ìï® Ïó¨Î∂Ä)
            if (!email.includes('@')) {
                return; // ÏïÑÏßÅ ÏûÖÎ†• Ï§ëÏù¥ÎØÄÎ°ú Î©îÏãúÏßÄ ÌëúÏãú ÏïàÌï®
            }
            
            // ÏôÑÏ†ÑÌïú Ïù¥Î©îÏùº ÌòïÏãùÏù∏ÏßÄ Ï≤¥ÌÅ¨
            if (!isValidEmail(email)) {
                return; // ÏïÑÏßÅ ÏûÖÎ†• Ï§ëÏù¥ÎØÄÎ°ú Î©îÏãúÏßÄ ÌëúÏãú ÏïàÌï®
            }
            
            // 500ms ÌõÑÏóê Ï§ëÎ≥µÏ≤¥ÌÅ¨ Ïã§Ìñâ
            emailCheckTimer = setTimeout(() => {
                checkEmailDuplicate(email);
            }, 500);
        });
        
        // Ïù¥Î©îÏùº Ï§ëÎ≥µÏ≤¥ÌÅ¨ Ìï®Ïàò
        function checkEmailDuplicate(email) {
            fetch('/catchtable/auth/check-email?email=' + encodeURIComponent(email), {
                method: 'POST'
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    hideError('emailError');
                    showSuccess('emailSuccess', '‚úÖ ÏÇ¨Ïö© Í∞ÄÎä•Ìïú Ïù¥Î©îÏùºÏûÖÎãàÎã§');
                } else {
                    showError('emailError', '‚ùå Ïù¥ÎØ∏ ÏÇ¨Ïö©Ï§ëÏù∏ Ïù¥Î©îÏùºÏûÖÎãàÎã§');
                    hideSuccess('emailSuccess');
                }
            })
            .catch(error => {
                showError('emailError', '‚ö†Ô∏è ÌôïÏù∏ Ï§ë Ïò§Î•òÍ∞Ä Î∞úÏÉùÌñàÏäµÎãàÎã§');
                hideSuccess('emailSuccess');
            });
        }
        
        // Ïù¥Î©îÏùº Ìè¨Ïª§Ïä§ Î≤óÏñ¥ÎÇ† Îïå ÌòïÏãù Í≤ÄÏ¶ù
        emailInput.addEventListener('blur', function() {
            const email = this.value.trim();
            if (email && !isValidEmail(email)) {
                showError('emailError', 'Ïò¨Î∞îÎ•∏ Ïù¥Î©îÏùº ÌòïÏãùÏùÑ ÏûÖÎ†•Ìï¥Ï£ºÏÑ∏Ïöî');
                hideSuccess('emailSuccess');
            }
        });
        
        // ===== ÎπÑÎ∞ÄÎ≤àÌò∏ Í∞ïÎèÑ Ï≤¥ÌÅ¨ =====
        passwordInput.addEventListener('input', function() {
            checkPasswordStrength(this.value);
        });
        
        // ===== ÎπÑÎ∞ÄÎ≤àÌò∏ ÌôïÏù∏ =====
        passwordConfirmInput.addEventListener('input', function() {
            const password = passwordInput.value;
            const passwordConfirm = this.value;
            
            if (passwordConfirm && password !== passwordConfirm) {
                showError('passwordConfirmError', 'ÎπÑÎ∞ÄÎ≤àÌò∏Í∞Ä ÏùºÏπòÌïòÏßÄ ÏïäÏäµÎãàÎã§.');
                hideSuccess('passwordConfirmSuccess');
            } else if (passwordConfirm && password === passwordConfirm) {
                hideError('passwordConfirmError');
                showSuccess('passwordConfirmSuccess', 'ÎπÑÎ∞ÄÎ≤àÌò∏Í∞Ä ÏùºÏπòÌï©ÎãàÎã§.');
            } else {
                hideError('passwordConfirmError');
                hideSuccess('passwordConfirmSuccess');
            }
        });
        
        // ===== Ìú¥ÎåÄÌè∞Î≤àÌò∏ ÌòïÏãù ÏûêÎèô Î≥ÄÌôò =====
        phoneInput.addEventListener('input', function() {
            let value = this.value.replace(/[^0-9]/g, '');
            if (value.length >= 3) {
                if (value.length >= 7) {
                    value = value.replace(/(\d{3})(\d{4})(\d{4})/, '$1-$2-$3');
                } else {
                    value = value.replace(/(\d{3})(\d{4})/, '$1-$2');
                }
            }
            this.value = value;
        });
        
        // ===== Ìèº Ï†úÏ∂ú =====
        form.addEventListener('submit', function(e) {
            e.preventDefault();
            
            if (!validateForm()) {
                return;
            }
            
            submitBtn.disabled = true;
            loading.style.display = 'block';
            
            const formData = {
                email: emailInput.value.trim(),
                password: passwordInput.value,
                name: nameInput.value.trim(),
                phone: phoneInput.value.trim() || null,
                birthDate: document.getElementById('birthDate').value || null,
                gender: document.getElementById('gender').value || null
            };
            
            // AJAX ÏöîÏ≤≠
            fetch('/catchtable/auth/register', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(formData)
            })
            .then(response => response.json())
            .then(data => {
                loading.style.display = 'none';
                
                if (data.success) {
                    alert(data.message);
                    
                    // ÏÑ†Ìò∏ÎèÑ ÏÑ§Ï†ï ÌéòÏù¥ÏßÄÎ°ú Ïù¥Îèô (ÌäπÎ≥ÑÌïú ÏùëÎãµ ÏΩîÎìú ÌôïÏù∏)
                    if (data.data === "PREFERENCES") {
                        if (confirm('ÎßûÏ∂§ ÎßõÏßë Ï∂îÏ≤úÏùÑ ÏúÑÌï¥ ÏÑ†Ìò∏ÎèÑÎ•º ÏÑ§Ï†ïÌïòÏãúÍ≤†ÏäµÎãàÍπå?\n(ÎÇòÏ§ëÏóêÎèÑ ÏÑ§Ï†ïÌï† Ïàò ÏûàÏäµÎãàÎã§)')) {
                            window.location.href = '/catchtable/preferences/setup';
                        } else {
                            window.location.href = '/catchtable/';
                        }
                    } else {
                        window.location.href = '/catchtable/auth/login';
                    }
                } else {
                    alert(data.message);
                    submitBtn.disabled = false;
                }
            })
            .catch(error => {
                loading.style.display = 'none';
                alert('Ïò§Î•òÍ∞Ä Î∞úÏÉùÌñàÏäµÎãàÎã§. Îã§Ïãú ÏãúÎèÑÌï¥Ï£ºÏÑ∏Ïöî.');
                submitBtn.disabled = false;
            });
        });
        
        // ===== Ïú†Ìã∏Î¶¨Ìã∞ Ìï®ÏàòÎì§ =====
        function isValidEmail(email) {
            const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            return emailRegex.test(email);
        }
        
        function checkPasswordStrength(password) {
            const strengthBars = document.querySelectorAll('.strength-bar');
            const strengthText = document.getElementById('strengthText');
            
            // Ï¥àÍ∏∞Ìôî
            strengthBars.forEach(bar => bar.className = 'strength-bar');
            
            if (password.length === 0) {
                strengthText.textContent = '8Ïûê Ïù¥ÏÉÅ, ÏòÅÎ¨∏, Ïà´Ïûê, ÌäπÏàòÎ¨∏ÏûêÎ•º Ìè¨Ìï®Ìï¥Ï£ºÏÑ∏Ïöî';
                return;
            }
            
            let score = 0;
            if (password.length >= 8) score++;
            if (/[a-zA-Z]/.test(password)) score++;
            if (/\d/.test(password)) score++;
            if (/[!@#$%^&*(),.?":{}|<>]/.test(password)) score++;
            
            // Í∞ïÎèÑ ÌëúÏãú
            if (score >= 1) {
                strengthBars[0].classList.add('weak');
                strengthText.textContent = 'ÏïΩÌï®';
            }
            if (score >= 2) {
                strengthBars[1].classList.add('weak');
                strengthText.textContent = 'Î≥¥ÌÜµ';
            }
            if (score >= 3) {
                strengthBars[0].classList.remove('weak');
                strengthBars[1].classList.remove('weak');
                strengthBars[0].classList.add('medium');
                strengthBars[1].classList.add('medium');
                strengthBars[2].classList.add('medium');
                strengthText.textContent = 'Ï¢ãÏùå';
            }
            if (score === 4) {
                strengthBars.forEach(bar => {
                    bar.classList.remove('weak', 'medium');
                    bar.classList.add('strong');
                });
                strengthText.textContent = 'Îß§Ïö∞ Í∞ïÌï®';
            }
        }
        
        function validateForm() {
            let isValid = true;
            
            // Ïù¥Î©îÏùº ÌïÑÏàò Ï≤¥ÌÅ¨
            if (!emailInput.value.trim()) {
                showError('emailError', 'Ïù¥Î©îÏùºÏùÄ ÌïÑÏàòÏûÖÎãàÎã§.');
                isValid = false;
            } else if (!isValidEmail(emailInput.value.trim())) {
                showError('emailError', 'Ïò¨Î∞îÎ•∏ Ïù¥Î©îÏùº ÌòïÏãùÏùÑ ÏûÖÎ†•Ìï¥Ï£ºÏÑ∏Ïöî.');
                isValid = false;
            } else {
                // Ï§ëÎ≥µÏ≤¥ÌÅ¨ ÏôÑÎ£å Ïó¨Î∂Ä ÌôïÏù∏
                const successMessage = document.getElementById('emailSuccess');
                if (successMessage.style.display === 'none' || !successMessage.textContent.includes('ÏÇ¨Ïö© Í∞ÄÎä•')) {
                    showError('emailError', 'Ïù¥Î©îÏùº Ï§ëÎ≥µÌôïÏù∏ÏùÑ ÏôÑÎ£åÌï¥Ï£ºÏÑ∏Ïöî.');
                    isValid = false;
                }
            }
            
            // ÎπÑÎ∞ÄÎ≤àÌò∏ ÌïÑÏàò Ï≤¥ÌÅ¨
            if (!passwordInput.value) {
